<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mgym" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_darkest</item>
        <item name="colorPrimaryVariant">@color/blue_base</item>
        <item name="colorOnPrimary">@color/sky_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_dark</item>
        <item name="colorSecondaryVariant">@color/primary_base</item>
        <item name="colorOnSecondary">@color/ink_darkest</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/sky_white</item>
        <!-- Customize your theme here. -->
        <item name="appBarLayoutStyle">@style/AppbarStyle</item>
    </style>

    <style name="AppbarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/sky_white</item>
    </style>
</resources>